<style>
  .cta-section {
    position: relative;
    padding: var(--space-5xl) 0;
    background-color: var(--color-accent-primary);
    overflow: hidden;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.3;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: #fff;
    top: -200px;
    right: -100px;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: #fff;
    bottom: -150px;
    left: -100px;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: var(--font-size-5xl);
    font-weight: 600;
    color: white;
    margin-bottom: var(--space-lg);
  }

  .cta-subtitle {
    font-size: var(--font-size-xl);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: var(--space-2xl);
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
    flex-wrap: wrap;
  }

  .btn-light {
    background-color: white;
    color: var(--color-accent-primary);
    padding: var(--space-lg) var(--space-2xl);
    font-weight: 600;
    border-radius: var(--radius-pill);
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    transition: all var(--transition-normal);
  }

  .btn-light:hover {
    background-color: var(--color-warm-100);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    color: var(--color-accent-hover);
  }

  .btn-ghost-light {
    background-color: transparent;
    color: white;
    padding: var(--space-lg) var(--space-2xl);
    font-weight: 600;
    border-radius: var(--radius-pill);
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all var(--transition-normal);
  }

  .btn-ghost-light:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    color: white;
  }

  .cta-trust {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.9);
  }

  .trust-item svg {
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 640px) {
    .cta-title {
      font-size: var(--font-size-3xl);
    }

    .cta-subtitle {
      font-size: var(--font-size-lg);
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
      justify-content: center;
    }

    .cta-trust {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>
