---
import { serviceCategories } from '../../data/services';
---

<section class="services-section" id="services">
  <div class="container">
    <div class="section-header" data-animate="fade-up">
      <span class="section-badge">Capabilities</span>
      <h2 class="section-title">What Your AI Team Can Do</h2>
      <p class="section-subtitle">
        From daily admin to strategic planning, your AI team handles the work that slows you down.
      </p>
    </div>

    <div class="services-container" data-animate="fade-up">
      <div class="tabs-wrapper">
        <div class="tabs" role="tablist">
          {serviceCategories.map((category, index) => (
            <button
              class={`tab ${index === 0 ? 'active' : ''}`}
              data-tab={category.id}
              role="tab"
              aria-selected={index === 0 ? 'true' : 'false'}
              aria-controls={`panel-${category.id}`}
            >
              {category.name}
            </button>
          ))}
        </div>
      </div>

      <div class="panels-wrapper">
        {serviceCategories.map((category, index) => (
          <div
            id={`panel-${category.id}`}
            class={`panel ${index === 0 ? 'active' : ''}`}
            role="tabpanel"
            aria-labelledby={`tab-${category.id}`}
          >
            <div class="features-grid">
              {category.features.map(feature => (
                <div class="feature-card">
                  <div class="feature-icon">
                    {feature.icon === 'mail' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                        <polyline points="22,6 12,13 2,6"/>
                      </svg>
                    )}
                    {feature.icon === 'calendar' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                      </svg>
                    )}
                    {feature.icon === 'file-text' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14 2 14 8 20 8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                        <polyline points="10 9 9 9 8 9"/>
                      </svg>
                    )}
                    {feature.icon === 'file' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/>
                        <polyline points="13 2 13 9 20 9"/>
                      </svg>
                    )}
                    {feature.icon === 'database' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <ellipse cx="12" cy="5" rx="9" ry="3"/>
                        <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/>
                        <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
                      </svg>
                    )}
                    {feature.icon === 'plane' && (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
