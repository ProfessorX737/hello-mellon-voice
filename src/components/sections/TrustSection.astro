---
import { testimonials, trustBadges, founders } from '../../data/testimonials';
---

<section class="trust-section" id="trust">
  <div class="container">
    <!-- Founder Story -->
    <div class="founder-section" data-animate="fade-up">
      <div class="founder-content">
        <span class="section-badge">Our Story</span>
        <h2 class="section-title">Built by Developers Who've Been There</h2>
        <p class="founder-text">
          We're Daniel and Xavier â€” brothers who've worked at Atlassian and built products used by millions. 
          When we saw how AI could transform small businesses, we knew we had to make it accessible. 
          We believe every Australian business deserves a world-class team, regardless of size or budget.
        </p>
        <div class="founders-row">
          {founders.map(founder => (
            <div class="founder-card">
              <img 
                src={founder.avatar} 
                alt={founder.name}
                class="founder-avatar"
                onerror="this.style.display='none'"
              />
              <div class="founder-info">
                <h4>{founder.name}</h4>
                <p class="founder-role">{founder.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Trust Badges -->
    <div class="trust-badges" data-animate="fade-up">
      {trustBadges.map((badge, index) => (
        <div class="trust-badge" data-animate="fade-up" data-delay={index * 100}>
          <div class="badge-icon">
            {badge.icon === 'map-pin' && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            )}
            {badge.icon === 'shield' && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
            )}
            {badge.icon === 'users' && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            )}
            {badge.icon === 'code' && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="16 18 22 12 16 6"/>
                <polyline points="8 6 2 12 8 18"/>
              </svg>
            )}
          </div>
          <h4>{badge.title}</h4>
          <p>{badge.description}</p>
        </div>
      ))}
    </div>

    <!-- Testimonials -->
    <div class="testimonials-section" data-animate="fade-up">
      <h3 class="testimonials-title">What Our Clients Say</h3>
      <div class="testimonials-grid">
        {testimonials.map((testimonial, index) => (
          <div class="testimonial-card" data-animate="fade-up" data-delay={index * 150}>
            <div class="stars">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
            <blockquote class="testimonial-quote">
              "{testimonial.quote}"
            </blockquote>
            <div class="testimonial-author">
              <div class="author-info">
                <p class="author-name">{testimonial.author}</p>
                <p class="author-role">{testimonial.role}, {testimonial.company}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .trust-section {
    padding: var(--space-5xl) 0;
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-warm-200);
  }

  /* Founder Section */
  .founder-section {
    margin-bottom: var(--space-4xl);
  }

  .founder-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .section-badge {
    display: inline-block;
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-md);
  }

  .section-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: var(--font-size-4xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .founder-text {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-2xl);
  }

  .founders-row {
    display: flex;
    justify-content: center;
    gap: var(--space-2xl);
  }

  .founder-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .founder-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid white;
    box-shadow: var(--shadow-md);
  }

  .founder-info h4 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 2px;
  }

  .founder-role {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Trust Badges */
  .trust-badges {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-4xl);
    padding: var(--space-2xl) 0;
    border-top: 1px solid var(--color-warm-200);
    border-bottom: 1px solid var(--color-warm-200);
  }

  .trust-badge {
    text-align: center;
  }

  .badge-icon {
    width: 56px;
    height: 56px;
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-warm-200);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-md);
    color: var(--color-accent-primary);
  }

  .trust-badge h4 {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }

  .trust-badge p {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    line-height: 1.5;
    margin: 0;
  }

  /* Testimonials */
  .testimonials-section {
    text-align: center;
  }

  .testimonials-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-2xl);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .testimonial-card {
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-warm-200);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    text-align: left;
    transition: all var(--transition-normal);
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .stars {
    display: flex;
    gap: 4px;
    color: var(--color-accent-tertiary);
    margin-bottom: var(--space-md);
  }

  .testimonial-quote {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 2px;
  }

  .author-role {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 1024px) {
    .trust-badges {
      grid-template-columns: repeat(2, 1fr);
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .founders-row {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 640px) {
    .trust-badges {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: var(--font-size-3xl);
    }

    .founder-text {
      font-size: var(--font-size-base);
    }
  }
</style>
