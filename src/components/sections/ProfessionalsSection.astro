    <!-- Professions Rows -->
    <div class="professions-container">
      <!-- Medical Professionals Row -->
      <div class="professions-row">
        <div class="professions-scroll medical-scroll">
          <!-- First group -->
          <div class="professions-group">
            <span class="profession-pill pill-featured">Medical Professionals</span>
            <span class="profession-pill">General Practitioners</span>
            <span class="profession-pill">Cardiologists</span>
            <span class="profession-pill">Surgeons</span>
            <span class="profession-pill">Psychiatrists</span>
            <span class="profession-pill">Orthopedists</span>
            <span class="profession-pill">Physiotherapists</span>
