            <span class="dict-term">Theoden</span>
            <span class="dict-term">Rohan</span>
            <span class="dict-term">Gondor</span>
            <span class="dict-term">Tyrion</span>
            <span class="dict-term">Cersei</span>
            <span class="dict-term">Jaime</span>
            <span class="dict-term">Brienne</span>
            <span class="dict-term">Sansa</span>
            <span class="dict-term">Arya</span>
