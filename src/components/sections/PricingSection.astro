<style>
  /* ========== PRICING SECTION ========== */
  .pricing-section {
    position: relative;
    overflow: hidden;
    padding: var(--space-5xl) 0;
  }

  /* Background */
  .section-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .gradient-mesh {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .mesh-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .mesh-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.4) 0%, transparent 70%);
    top: -200px;
    left: -200px;
    animation: mesh-float 20s ease-in-out infinite;
  }

  .mesh-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.35) 0%, transparent 70%);
    bottom: -150px;
    right: -150px;
    animation: mesh-float 20s ease-in-out infinite reverse;
  }

  .mesh-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.3) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: mesh-pulse 15s ease-in-out infinite;
  }

  @keyframes mesh-float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 50px) scale(0.95);
    }
  }

  @keyframes mesh-pulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.5;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.8;
    }
  }

  .noise-overlay {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.03;
    mix-blend-mode: overlay;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
  }

  /* Content */

  .cta-badge {
    margin-bottom: var(--space-lg);
  }
   .badge-shimmer {
    display: inline-flex;
    align-items: center;
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: var(--radius-pill);
    background: linear-gradient(90deg, 
      rgba(236, 72, 153, 0.2) 0%, 
      rgba(139, 92, 246, 0.2) 50%, 
      rgba(236, 72, 153, 0.2) 100%
    );
    background-size: 200% 100%;
    color: #f9a8d4;
    border: 1px solid rgba(236, 72, 153, 0.3);
    animation: shimmer 3s linear infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

    .cta-title {
    font-size: clamp(40px, 6vw, 64px);
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .gradient-text {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradient-shift 5s ease infinite;
  }

  
  .section-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .section-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-md);
    line-height: 1.2;
    color: var(--color-text-primary);
  }

  .section-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3xl);
  }

  /* Pricing Cards */
  .pricing-cards {
    display: flex;
    justify-content: center;
    align-items: stretch;
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .pricing-card {
    max-width: 340px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-2xl);
    padding: var(--space-2xl);
    text-align: left;
    position: relative;
    transition: all var(--transition-slow);
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255, 255, 255, 0.12);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
  }

  .pricing-card.featured {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 0 0 40px rgba(99, 102, 241, 0.15);
  }

  .pricing-card.featured:hover {
    border-color: rgba(99, 102, 241, 0.5);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4), 0 0 60px rgba(99, 102, 241, 0.2);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    padding: var(--space-xs) var(--space-md);
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    border-radius: var(--radius-pill);
    white-space: nowrap;
  }

  .card-header {
    margin-bottom: var(--space-xl);
  }

  .card-header h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  .price {
    display: flex;
    align-items: baseline;
    gap: 2px;
    margin-bottom: var(--space-sm);
  }

  .currency {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .amount {
    font-size: 56px;
    font-weight: 800;
    color: var(--color-text-primary);
    line-height: 1;
  }

  .period {
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    margin-left: var(--space-xs);
  }

  .price-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .features-list {
    list-style: none;
    margin-bottom: var(--space-xl);
    flex-grow: 1;
  }

  .features-list li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  }

  .features-list li:last-child {
    border-bottom: none;
  }

  .features-list svg {
    color: #10b981;
    flex-shrink: 0;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
  }

  .btn-glow {
    position: relative;
  }

  .btn-glow::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6, #ec4899);
    border-radius: calc(var(--radius-lg) + 2px);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
    filter: blur(8px);
  }

  .btn-glow:hover::after {
    opacity: 0.5;
  }

  .cta-note {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-sm);
    text-align: center;
  }

  /* Trust Signals */
  .trust-signals {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-xl);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .trust-icon-wrapper {
    width: 24px;
    height: 24px;
    background: rgba(16, 185, 129, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #10b981;
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 640px) {
    .pricing-card {
      max-width: 100%;
    }

    .trust-signals {
      flex-direction: column;
      gap: var(--space-md);
      align-items: center;
    }

    .amount {
      font-size: 48px;
    }
  }
</style>

<script>
  // Scroll animation observer
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const delay = entry.target.dataset.delay || 0;
        setTimeout(() => {
          entry.target.classList.add('animate-visible');
        }, parseInt(delay));
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('#pricing [data-animate]').forEach(el => {
    observer.observe(el);
  });
</script>
