---
// Typing Speed Comparison Section
---

<section class="typing-speed-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Save 6+ hours every week</h2>
      <p class="section-subtitle">With an average of 3,000 words per day, voice dictation saves you over 6 hours per week</p>
    </div>

    <div class="typing-comparison-demo">
      <!-- Left side: Manual typing -->
      <div class="comparison-box manual-typing">
        <div class="comparison-header">
          <svg class="header-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="4" width="12" height="8" rx="1" stroke="currentColor" stroke-width="1.2" fill="none"/>
            <rect x="3.5" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="5" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="6.5" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="8" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="9.5" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="11" y="6" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="4" y="8" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="5.5" y="8" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="7" y="8" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="8.5" y="8" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="10" y="8" width="1" height="1" rx="0.25" fill="currentColor"/>
            <rect x="5" y="10" width="6" height="1" rx="0.25" fill="currentColor"/>
          </svg>
          Manual typing
        </div>
        <div class="comparison-content">
          <div class="text-lines">
            <div class="text-line line-1"></div>
            <div class="text-line line-2"></div>
            <div class="text-line line-3"></div>
            <div class="text-line line-4"></div>
            <div class="text-line line-5"></div>
            <div class="text-line line-6"></div>
          </div>
        </div>
        <div class="comparison-footer">45 words per minute</div>
      </div>
      
      <!-- Right side: Dictating using Mellon -->
      <div class="comparison-box dictation">
        <div class="comparison-header dictation-header">
          <img src="/mellon-mac-toolbar-icon.png" alt="Mellon" class="header-icon mellon-icon" width="20" height="20" />
          Dictating using Mellon
        </div>
        <div class="comparison-content">
          <!-- Recording indicator with waveform -->
          <div class="recording-pill">
            <svg class="mic-icon" width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="4.5" y="1" width="3" height="5" rx="1.5" stroke="currentColor" stroke-width="1.2" fill="none"/>
              <path d="M2 5.5C2 7.433 3.567 9 5.5 9H6.5C8.433 9 10 7.433 10 5.5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" fill="none"/>
              <line x1="6" y1="9" x2="6" y2="11" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
            </svg>
            <div class="mini-waveform">
              <div class="mini-bar" style="--height: 40%"></div>
              <div class="mini-bar" style="--height: 70%"></div>
              <div class="mini-bar" style="--height: 55%"></div>
              <div class="mini-bar" style="--height: 80%"></div>
              <div class="mini-bar" style="--height: 45%"></div>
              <div class="mini-bar" style="--height: 65%"></div>
              <div class="mini-bar" style="--height: 50%"></div>
              <div class="mini-bar" style="--height: 75%"></div>
            </div>
          </div>
          <!-- Text lines appear after recording -->
          <div class="text-lines">
            <div class="text-line line-1"></div>
            <div class="text-line line-2"></div>
            <div class="text-line line-3"></div>
            <div class="text-line line-4"></div>
            <div class="text-line line-5"></div>
            <div class="text-line line-6"></div>
            <div class="text-line line-7"></div>
            <div class="text-line line-8"></div>
            <div class="text-line line-9"></div>
            <div class="text-line line-10"></div>
          </div>
        </div>
        <div class="comparison-footer">250+ words per minute</div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ========== TYPING SPEED SECTION ========== */
  .typing-speed-section {
    padding: var(--space-4xl) 0;
    background: white;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: 40px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: 18px;
    color: var(--color-text-secondary);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Typing Comparison Demo */
  .typing-comparison-demo {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
    max-width: 900px;
    margin: 0 auto;
    align-items: stretch;
  }

  .comparison-box {
    background: white;
    border: 1px solid var(--color-gray-300);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .comparison-header {
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--color-gray-300);
    font-size: 15px;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
  }

  .header-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .mellon-icon {
    width: 20px;
    height: 20px;
    border-radius: 4px;
  }

  .dictation-header {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .comparison-content {
    padding: var(--space-xl);
    min-height: 220px;
    display: flex;
    flex-direction: column;
    position: relative;
    flex: 1;
  }

  .comparison-footer {
    padding: var(--space-md) var(--space-lg);
    border-top: 1px solid var(--color-gray-300);
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text-secondary);
    text-align: center;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Text lines */
  .text-lines {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .text-line {
    height: 8px;
    background: var(--color-gray-300);
    border-radius: 4px;
    opacity: 0;
    transform: scaleX(0);
    transform-origin: left;
  }

  /* 
   * SYNCHRONIZED ANIMATION CYCLE: 14 seconds total
   * - Manual typing: lines appear slowly from 0-11s
   * - Dictation: waveform 0-3s, then fast text 3-6s
   * - Both hold until 12s, then fade out and reset
   */

  /* Manual typing animation - slow, looping */
  .manual-typing .text-line.line-1 {
    animation: manual-line-1 14s ease-out infinite;
    width: 85%;
  }

  .manual-typing .text-line.line-2 {
    animation: manual-line-2 14s ease-out infinite;
    width: 92%;
  }

  .manual-typing .text-line.line-3 {
    animation: manual-line-3 14s ease-out infinite;
    width: 78%;
  }

  .manual-typing .text-line.line-4 {
    animation: manual-line-4 14s ease-out infinite;
    width: 88%;
  }

  .manual-typing .text-line.line-5 {
    animation: manual-line-5 14s ease-out infinite;
    width: 82%;
  }

  .manual-typing .text-line.line-6 {
    animation: manual-line-6 14s ease-out infinite;
    width: 45%;
  }

  /* Manual typing keyframes - each line starts at different point in the 14s cycle */
  /* Line 1: starts at 0%, grows 0-14% (0-2s) */
  @keyframes manual-line-1 {
    0% { opacity: 0; transform: scaleX(0); }
    1% { opacity: 1; }
    14% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Line 2: starts at 14%, grows 14-28% (2-4s) */
  @keyframes manual-line-2 {
    0%, 14% { opacity: 0; transform: scaleX(0); }
    15% { opacity: 1; }
    28% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Line 3: starts at 28%, grows 28-42% (4-6s) */
  @keyframes manual-line-3 {
    0%, 28% { opacity: 0; transform: scaleX(0); }
    29% { opacity: 1; }
    42% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Line 4: starts at 42%, grows 42-56% (6-8s) */
  @keyframes manual-line-4 {
    0%, 42% { opacity: 0; transform: scaleX(0); }
    43% { opacity: 1; }
    56% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Line 5: starts at 56%, grows 56-70% (8-10s) */
  @keyframes manual-line-5 {
    0%, 56% { opacity: 0; transform: scaleX(0); }
    57% { opacity: 1; }
    70% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Line 6: starts at 70%, grows 70-85% (10-12s) */
  @keyframes manual-line-6 {
    0%, 70% { opacity: 0; transform: scaleX(0); }
    71% { opacity: 1; }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* Recording pill with waveform - positioned absolutely, centered */
  .recording-pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 0, 0, 0.03);
    border: 1px solid var(--color-gray-300);
    padding: 8px 16px;
    border-radius: 100px;
    position: absolute;
    top: var(--space-lg);
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    animation: recording-fade 14s ease-in-out infinite;
    z-index: 10;
  }

  @keyframes recording-fade {
    0% { opacity: 0; transform: translateX(-50%) translateY(10px); }
    3% { opacity: 1; transform: translateX(-50%) translateY(0); }
    18% { opacity: 1; transform: translateX(-50%) translateY(0); }
    22% { opacity: 0; transform: translateX(-50%) translateY(-10px); }
    100% { opacity: 0; transform: translateX(-50%) translateY(-10px); }
  }

  .mic-icon {
    width: 12px;
    height: 12px;
    color: var(--color-text-secondary);
    flex-shrink: 0;
  }

  .mini-waveform {
    display: flex;
    align-items: center;
    gap: 2px;
    height: 20px;
  }

  .mini-bar {
    width: 3px;
    background: var(--color-gray-400);
    border-radius: 2px;
    height: var(--height);
    animation: mini-bar-pulse 0.8s ease-in-out infinite;
  }

  .mini-bar:nth-child(1) { animation-delay: 0s; --opacity: 0.7; }
  .mini-bar:nth-child(2) { animation-delay: 0.1s; --opacity: 0.9; }
  .mini-bar:nth-child(3) { animation-delay: 0.2s; --opacity: 1; }
  .mini-bar:nth-child(4) { animation-delay: 0.3s; --opacity: 0.8; }
  .mini-bar:nth-child(5) { animation-delay: 0.4s; --opacity: 0.75; }
  .mini-bar:nth-child(6) { animation-delay: 0.5s; --opacity: 0.85; }
  .mini-bar:nth-child(7) { animation-delay: 0.6s; --opacity: 1; }
  .mini-bar:nth-child(8) { animation-delay: 0.7s; --opacity: 0.9; }

  @keyframes mini-bar-pulse {
    0%, 100% { 
      height: 30%; 
      opacity: 0.4;
    }
    50% { 
      height: var(--height);
      opacity: var(--opacity, 1);
    }
  }

  /* Dictation text lines - appear fast after recording, looping */
  .dictation .text-line.line-1 {
    animation: dictation-line-1 14s ease-out infinite;
    width: 88%;
  }

  .dictation .text-line.line-2 {
    animation: dictation-line-2 14s ease-out infinite;
    width: 95%;
  }

  .dictation .text-line.line-3 {
    animation: dictation-line-3 14s ease-out infinite;
    width: 92%;
  }

  .dictation .text-line.line-4 {
    animation: dictation-line-4 14s ease-out infinite;
    width: 87%;
  }

  .dictation .text-line.line-5 {
    animation: dictation-line-5 14s ease-out infinite;
    width: 94%;
  }

  .dictation .text-line.line-6 {
    animation: dictation-line-6 14s ease-out infinite;
    width: 89%;
  }

  .dictation .text-line.line-7 {
    animation: dictation-line-7 14s ease-out infinite;
    width: 93%;
  }

  .dictation .text-line.line-8 {
    animation: dictation-line-8 14s ease-out infinite;
    width: 85%;
  }

  .dictation .text-line.line-9 {
    animation: dictation-line-9 14s ease-out infinite;
    width: 91%;
  }

  .dictation .text-line.line-10 {
    animation: dictation-line-10 14s ease-out infinite;
    width: 60%;
  }

  /* Dictation keyframes - lines appear rapidly after recording (starting at 22%) */
  /* Each line takes ~2% of cycle to grow (fast!) */
  @keyframes dictation-line-1 {
    0%, 22% { opacity: 0; transform: scaleX(0); }
    23% { opacity: 1; }
    25% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-2 {
    0%, 24% { opacity: 0; transform: scaleX(0); }
    25% { opacity: 1; }
    27% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-3 {
    0%, 26% { opacity: 0; transform: scaleX(0); }
    27% { opacity: 1; }
    29% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-4 {
    0%, 28% { opacity: 0; transform: scaleX(0); }
    29% { opacity: 1; }
    31% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-5 {
    0%, 30% { opacity: 0; transform: scaleX(0); }
    31% { opacity: 1; }
    33% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-6 {
    0%, 32% { opacity: 0; transform: scaleX(0); }
    33% { opacity: 1; }
    35% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-7 {
    0%, 34% { opacity: 0; transform: scaleX(0); }
    35% { opacity: 1; }
    37% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-8 {
    0%, 36% { opacity: 0; transform: scaleX(0); }
    37% { opacity: 1; }
    39% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-9 {
    0%, 38% { opacity: 0; transform: scaleX(0); }
    39% { opacity: 1; }
    41% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes dictation-line-10 {
    0%, 40% { opacity: 0; transform: scaleX(0); }
    41% { opacity: 1; }
    43% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 1; transform: scaleX(1); }
    92% { opacity: 0; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 968px) {
    .section-title {
      font-size: 32px;
    }

    .section-subtitle {
      font-size: 16px;
    }

    .typing-comparison-demo {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .comparison-content {
      min-height: 200px;
      padding: var(--space-lg);
    }

    .comparison-header,
    .comparison-footer {
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .typing-speed-section {
      padding: var(--space-3xl) 0;
    }

    .section-title {
      font-size: 28px;
    }

    .section-subtitle {
      font-size: 15px;
    }

    .typing-comparison-demo {
      grid-template-columns: 1fr;
    }

    .comparison-content {
      min-height: 180px;
      padding: var(--space-md);
    }

    .comparison-header {
      font-size: 13px;
      padding: 10px var(--space-md);
    }

    .comparison-footer {
      font-size: 12px;
      padding: 10px var(--space-md);
    }

    .text-line {
      height: 7px;
    }
  }

  @media (max-width: 480px) {
    .typing-speed-section {
      padding: var(--space-2xl) 0;
    }

    .section-title {
      font-size: 24px;
    }

    .section-subtitle {
      font-size: 14px;
    }

    .typing-comparison-demo {
      gap: var(--space-sm);
    }

    .comparison-content {
      min-height: 160px;
      padding: var(--space-sm);
    }

    .comparison-header {
      font-size: 12px;
      padding: 8px var(--space-sm);
    }

    .comparison-footer {
      font-size: 11px;
      padding: 8px var(--space-sm);
    }

    .text-line {
      height: 6px;
      gap: 8px;
    }

    .recording-pill {
      padding: 6px 12px;
      font-size: 12px;
      top: var(--space-md);
    }

    .mini-bar {
      width: 2px;
    }
  }
</style>
