---
const comparisons = [
  { role: 'Executive Assistant', humanCost: 75000, aiCost: 588 },
  { role: 'Marketing Manager', humanCost: 95000, aiCost: 588 },
  { role: 'Social Media Manager', humanCost: 65000, aiCost: 0 },
  { role: 'SEO Specialist', humanCost: 85000, aiCost: 0 },
  { role: 'Bookkeeper', humanCost: 60000, aiCost: 0 },
  { role: 'Business Coach', humanCost: 50000, aiCost: 0 },
];

const totalHuman = comparisons.reduce((sum, item) => sum + item.humanCost, 0);
const totalAI = 3588; // Business plan annual cost
const totalSavings = totalHuman - totalAI;
---

<section class="comparison-section" id="comparison">
  <div class="container">
    <div class="section-header" data-animate="fade-up">
      <span class="section-badge">Cost Comparison</span>
      <h2 class="section-title">The Math Is Simple</h2>
      <p class="section-subtitle">
        See how much you'll save by hiring an AI team instead of traditional employees.
      </p>
    </div>

    <div class="comparison-content" data-animate="fade-up">
      <div class="table-wrapper">
        <table class="comparison-table">
          <thead>
            <tr>
              <th>Role</th>
              <th>Human Hire (Annual)</th>
              <th>AI Equivalent</th>
              <th>You Save</th>
            </tr>
          </thead>
          <tbody>
            {comparisons.map((item, index) => {
              const savings = item.humanCost - item.aiCost;
              const savingsPercent = Math.round((savings / item.humanCost) * 100);
              return (
                <tr style={`animation-delay: ${index * 100}ms`}>
                  <td class="role-cell">{item.role}</td>
                  <td class="cost-cell human">${item.humanCost.toLocaleString()}/yr</td>
                  <td class="cost-cell ai">
                    {item.aiCost > 0 ? `$${item.aiCost}/yr` : 'Included'}
                  </td>
                  <td class="savings-cell">
                    <span class="savings-badge">{savingsPercent}%</span>
                    <span class="savings-amount">${savings.toLocaleString()}</span>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>

      <div class="savings-highlight" data-animate="fade-up">
        <div class="savings-card">
          <div class="savings-label">Total Annual Savings</div>
          <div class="savings-total">${totalSavings.toLocaleString()}</div>
          <div class="savings-context">
            Business plan vs hiring a full team
          </div>
          <div class="savings-note">
            Plus: Your AI team works 24/7, never takes leave, and scales instantly as you grow.
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

