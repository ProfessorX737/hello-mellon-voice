---
// Features Section - Privacy + Power Features
---

<section class="features-section" id="features">
  <div class="container">
    <!-- Privacy Section Header -->
    <div class="section-header" data-animate="fade-up">
      <span class="section-badge">Privacy First</span>
      <h2 class="section-title">Your data stays private</h2>
      <p class="section-subtitle">
        Privacy-first design means your words never leave your Mac.
      </p>
    </div>

    <!-- Privacy Features Grid -->
    <div class="features-grid" data-stagger>
      <!-- Feature 1: No Cloud Sync -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
            </div>
            <div class="icon-glow"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>No Cloud Sync</h3>
          <p>Everything happens locally on your Mac. Zero data collection. Complete privacy.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line"></div>
        </div>
      </div>

      <!-- Feature 2: Works Offline -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-alt">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 4v6h6"/>
                <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-alt"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Works Offline</h3>
          <p>No internet required. Your dictation works anywhere, anytime, without connectivity.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-alt"></div>
        </div>
      </div>

      <!-- Feature 3: Fully Configurable -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-alt2">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"/>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-alt2"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Fully Configurable</h3>
          <p>Customize shortcuts, languages, and behavior. Built for everyone, from students to professionals.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-alt2"></div>
        </div>
      </div>
    </div>

    <!-- Stats Row -->
    <div class="stats-row" data-animate="fade-up">
      <div class="stat-item">
        <span class="stat-number">0</span>
        <span class="stat-label">Data sent to cloud</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-number">100%</span>
        <span class="stat-label">Private & offline</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-number">∞</span>
        <span class="stat-label">Usage forever</span>
      </div>
    </div>

    <!-- Power Features Section Header -->
    <div class="section-header power-header" data-animate="fade-up">
      <span class="section-badge badge-power">Power Features</span>
      <h2 class="section-title">Built for power users</h2>
      <p class="section-subtitle">
        Go beyond dictation with AI agent mode, custom prompts, and full API access.
      </p>
    </div>

    <!-- Power Features Grid -->
    <div class="features-grid power-grid" data-stagger>
      <!-- Feature: Agent Mode -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-agent">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2a4 4 0 0 1 4 4c0 1.95-1.4 3.57-3.25 3.92L12 10v2"/>
                <circle cx="12" cy="16" r="4"/>
                <path d="M12 20v2"/>
                <path d="M8 16h-4"/>
                <path d="M20 16h-4"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-agent"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Agent Mode</h3>
          <p>Say "Hey Mellon, make this more professional" and AI rewrites your text in-place. Voice-controlled editing.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-agent"></div>
        </div>
      </div>

      <!-- Feature: Custom Prompts -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-prompt">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                <polyline points="14 2 14 8 20 8"/>
                <line x1="16" y1="13" x2="8" y2="13"/>
                <line x1="16" y1="17" x2="8" y2="17"/>
                <line x1="10" y1="9" x2="8" y2="9"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-prompt"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Custom Prompts</h3>
          <p>Create your own AI correction prompts. Medical notes, legal briefs, code comments — tailor formatting to your workflow.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-prompt"></div>
        </div>
      </div>

      <!-- Feature: Bring Your Own API Key -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-api">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.78 7.78 5.5 5.5 0 0 1 7.78-7.78zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-api"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Bring Your Own API Key</h3>
          <p>Use your own keys from OpenAI, Anthropic, Google Gemini, or Groq. No subscriptions, no middleman.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-api"></div>
        </div>
      </div>

      <!-- Feature: HTTP Server API -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-server">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="8" rx="2" ry="2"/>
                <rect x="2" y="14" width="20" height="8" rx="2" ry="2"/>
                <line x1="6" y1="6" x2="6.01" y2="6"/>
                <line x1="6" y1="18" x2="6.01" y2="18"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-server"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>HTTP Server API</h3>
          <p>Built-in local API server with OpenAI-compatible endpoints. Integrate Mellon into any workflow or automation.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-server"></div>
        </div>
      </div>

      <!-- Feature: Custom API Provider -->
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-visual">
          <div class="feature-icon-wrapper">
            <div class="icon-bg icon-bg-provider">
              <svg class="feature-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="16 18 22 12 16 6"/>
                <polyline points="8 6 2 12 8 18"/>
                <line x1="12" y1="2" x2="12" y2="22"/>
              </svg>
            </div>
            <div class="icon-glow icon-glow-provider"></div>
          </div>
          <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>
        </div>
        <div class="feature-content">
          <h3>Custom API Provider</h3>
          <p>Connect any OpenAI-compatible endpoint — local LLMs, OpenRouter, or your own server. Full control over your AI stack.</p>
        </div>
        <div class="feature-decoration">
          <div class="decoration-line decoration-line-provider"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ========== FEATURES SECTION ========== */
  .features-section {
    background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
    position: relative;
    overflow: hidden;
  }

  .features-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(139, 92, 246, 0.06) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-4xl);
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: var(--radius-pill);
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
    color: #a5b4fc;
    border: 1px solid rgba(99, 102, 241, 0.2);
    margin-bottom: var(--space-lg);
  }

  .section-title {
    font-size: clamp(36px, 5vw, 48px);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-4xl);
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-2xl);
    padding: var(--space-2xl);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-slow);
  }

  .feature-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, transparent 50%);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .feature-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  /* Feature Visual */
  .feature-visual {
    position: relative;
    margin-bottom: var(--space-xl);
    display: flex;
    justify-content: center;
  }

  .feature-icon-wrapper {
    position: relative;
    z-index: 1;
  }

  .icon-bg {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(99, 102, 241, 0.05) 100%);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #818cf8;
    position: relative;
    z-index: 1;
    transition: all var(--transition-normal);
  }

  .icon-bg-alt {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(16, 185, 129, 0.05) 100%);
    border-color: rgba(16, 185, 129, 0.3);
    color: #34d399;
  }

  .icon-bg-alt2 {
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(236, 72, 153, 0.05) 100%);
    border-color: rgba(236, 72, 153, 0.3);
    color: #f472b6;
  }

  .feature-card:hover .icon-bg {
    transform: scale(1.1);
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
  }

  .feature-card:hover .icon-bg-alt {
    box-shadow: 0 0 30px rgba(16, 185, 129, 0.3);
  }

  .feature-card:hover .icon-bg-alt2 {
    box-shadow: 0 0 30px rgba(236, 72, 153, 0.3);
  }

  .icon-glow {
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 0;
  }

  .icon-glow-alt {
    background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, transparent 70%);
  }

  .icon-glow-alt2 {
    background: radial-gradient(circle, rgba(236, 72, 153, 0.3) 0%, transparent 70%);
  }

  .feature-card:hover .icon-glow {
    opacity: 1;
  }

  /* Floating Shapes */
  .floating-shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.3;
    animation: float-shape 6s ease-in-out infinite;
  }

  .shape-1 {
    width: 20px;
    height: 20px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    top: 10%;
    left: 20%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, #ec4899, #f43f5e);
    bottom: 20%;
    right: 20%;
    animation-delay: -3s;
  }

  @keyframes float-shape {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(10px, -10px) scale(1.1);
    }
  }

  /* Feature Content */
  .feature-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .feature-content h3 {
    font-size: var(--font-size-xl);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    color: var(--color-text-primary);
  }

  .feature-content p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.7;
  }

  /* Feature Decoration */
  .feature-decoration {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    overflow: hidden;
  }

  .decoration-line {
    height: 100%;
    width: 0;
    background: linear-gradient(90deg, transparent, #6366f1, transparent);
    transition: width var(--transition-slow);
  }

  .decoration-line-alt {
    background: linear-gradient(90deg, transparent, #10b981, transparent);
  }

  .decoration-line-alt2 {
    background: linear-gradient(90deg, transparent, #ec4899, transparent);
  }

  .feature-card:hover .decoration-line {
    width: 100%;
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3xl);
    padding: var(--space-2xl);
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-2xl);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 48px;
    font-weight: 800;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--space-xs);
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: linear-gradient(180deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  }

  /* ========== POWER FEATURES ========== */
  .power-header {
    margin-top: var(--space-4xl);
    padding-top: var(--space-4xl);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .badge-power {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(249, 115, 22, 0.15) 100%);
    color: #fbbf24;
    border-color: rgba(245, 158, 11, 0.2);
  }

  .power-grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .power-grid .feature-card:nth-child(4),
  .power-grid .feature-card:nth-child(5) {
    grid-column: span 1;
  }

  /* Agent Mode color */
  .icon-bg-agent {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(245, 158, 11, 0.05) 100%);
    border-color: rgba(245, 158, 11, 0.3);
    color: #fbbf24;
  }
  .icon-glow-agent { background: radial-gradient(circle, rgba(245, 158, 11, 0.3) 0%, transparent 70%); }
  .decoration-line-agent { background: linear-gradient(90deg, transparent, #f59e0b, transparent); }
  .feature-card:hover .icon-bg-agent { box-shadow: 0 0 30px rgba(245, 158, 11, 0.3); }

  /* Custom Prompts color */
  .icon-bg-prompt {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(59, 130, 246, 0.05) 100%);
    border-color: rgba(59, 130, 246, 0.3);
    color: #60a5fa;
  }
  .icon-glow-prompt { background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 70%); }
  .decoration-line-prompt { background: linear-gradient(90deg, transparent, #3b82f6, transparent); }
  .feature-card:hover .icon-bg-prompt { box-shadow: 0 0 30px rgba(59, 130, 246, 0.3); }

  /* API Key color */
  .icon-bg-api {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(34, 197, 94, 0.05) 100%);
    border-color: rgba(34, 197, 94, 0.3);
    color: #4ade80;
  }
  .icon-glow-api { background: radial-gradient(circle, rgba(34, 197, 94, 0.3) 0%, transparent 70%); }
  .decoration-line-api { background: linear-gradient(90deg, transparent, #22c55e, transparent); }
  .feature-card:hover .icon-bg-api { box-shadow: 0 0 30px rgba(34, 197, 94, 0.3); }

  /* HTTP Server color */
  .icon-bg-server {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(168, 85, 247, 0.05) 100%);
    border-color: rgba(168, 85, 247, 0.3);
    color: #c084fc;
  }
  .icon-glow-server { background: radial-gradient(circle, rgba(168, 85, 247, 0.3) 0%, transparent 70%); }
  .decoration-line-server { background: linear-gradient(90deg, transparent, #a855f7, transparent); }
  .feature-card:hover .icon-bg-server { box-shadow: 0 0 30px rgba(168, 85, 247, 0.3); }

  /* Custom Provider color */
  .icon-bg-provider {
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(236, 72, 153, 0.05) 100%);
    border-color: rgba(236, 72, 153, 0.3);
    color: #f472b6;
  }
  .icon-glow-provider { background: radial-gradient(circle, rgba(236, 72, 153, 0.3) 0%, transparent 70%); }
  .decoration-line-provider { background: linear-gradient(90deg, transparent, #ec4899, transparent); }
  .feature-card:hover .icon-bg-provider { box-shadow: 0 0 30px rgba(236, 72, 153, 0.3); }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 968px) {
    .features-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin-left: auto;
