---
import { faqItems } from '../../data/faq';
---

<section class="faq-section" id="faq">
  <div class="container">
    <div class="section-header" data-animate="fade-up">
      <span class="section-badge">FAQ</span>
      <h2 class="section-title">Questions? We've Got Answers</h2>
      <p class="section-subtitle">
        Everything you need to know about Mellon AI. Can't find what you're looking for? Reach out to us directly.
      </p>
    </div>

    <div class="faq-container" data-animate="fade-up">
      {faqItems.map((item, index) => (
        <div class="faq-item" data-faq={item.id}>
          <button 
            class="faq-question" 
            aria-expanded="false"
            aria-controls={`answer-${item.id}`}
          >
            <span class="question-text">{item.question}</span>
            <span class="question-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
              </svg>
            </span>
          </button>
          <div 
            id={`answer-${item.id}`}
            class="faq-answer"
            aria-hidden="true"
          >
            <div class="answer-content">
              <p>{item.answer}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="faq-cta" data-animate="fade-up">
      <p>Still have questions?</p>
      <a href="#book-call" class="btn btn-primary">
        Book a Call With Our Team
      </a>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.question-icon');

      question.addEventListener('click', () => {
        const isOpen = item.classList.contains('open');

        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('open');
            const otherQuestion = otherItem.querySelector('.faq-question');
            const otherAnswer = otherItem.querySelector('.faq-answer');
            otherQuestion.setAttribute('aria-expanded', 'false');
            otherAnswer.setAttribute('aria-hidden', 'true');
            otherAnswer.style.maxHeight = '0';
          }
        });

        // Toggle current item
        if (isOpen) {
          item.classList.remove('open');
          question.setAttribute('aria-expanded', 'false');
          answer.setAttribute('aria-hidden', 'true');
          answer.style.maxHeight = '0';
        } else {
          item.classList.add('open');
          question.setAttribute('aria-expanded', 'true');
          answer.setAttribute('aria-hidden', 'false');
          answer.style.maxHeight = answer.scrollHeight + 'px';
        }
      });
    });
  });
</script>

<style>
  .faq-section {
    padding: var(--space-5xl) 0;
    background-color: var(--color-bg-elevated);
  }

  .section-header {
    text-align: center;
    max-width: 640px;
    margin: 0 auto var(--space-3xl);
  }

  .section-badge {
    display: inline-block;
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-md);
  }

  .section-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: var(--font-size-4xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto var(--space-3xl);
  }

  .faq-item {
    border-bottom: 1px solid var(--color-warm-200);
  }

  .faq-question {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    padding: var(--space-lg) 0;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: var(--font-size-lg);
    font-weight: 500;
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
  }

  .faq-question:hover {
    color: var(--color-accent-primary);
  }

  .question-text {
    flex: 1;
  }

  .question-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: transform var(--transition-normal);
  }

  .faq-item.open .question-icon {
    transform: rotate(45deg);
    color: var(--color-accent-primary);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--transition-normal);
  }

  .answer-content {
    padding-bottom: var(--space-lg);
  }

  .answer-content p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  .faq-cta {
    text-align: center;
    padding: var(--space-2xl);
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-warm-200);
    border-radius: var(--radius-lg);
    max-width: 600px;
    margin: 0 auto;
  }

  .faq-cta p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  @media (max-width: 640px) {
    .faq-question {
      font-size: var(--font-size-base);
      padding: var(--space-md) 0;
    }

    .section-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
