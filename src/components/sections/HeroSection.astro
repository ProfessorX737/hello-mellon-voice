---
import { teamMembers } from '../../data/ai-team';
---

<section class="hero" id="hero">
  <div class="hero-bg">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
  </div>

  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-badge" data-animate="fade-up">
        <span class="badge badge-accent">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
            <path d="M12 6v6l4 2"/>
          </svg>
          Australian-Based AI Team
        </span>
      </div>

      <h1 class="hero-title" data-animate="fade-up" data-delay="100">
        Hire an AI Team for Less Than One Employee
      </h1>

      <p class="hero-subtitle" data-animate="fade-up" data-delay="200">
        Get a full team of AI workers — executive assistants, marketers, accountants, and more — all trained specifically for your business. We set everything up for you, in person or remotely.
      </p>

      <div class="hero-trust" data-animate="fade-up" data-delay="300">
        <div class="trust-item">
          <svg class="trust-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
            <path d="M6 10l3 3 5-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Free 30-day trial</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
            <path d="M6 10l3 3 5-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>No credit card</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
            <path d="M6 10l3 3 5-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Cancel anytime</span>
        </div>
      </div>

      <div class="hero-cta" data-animate="fade-up" data-delay="400">
        <a href="#book-call" class="btn btn-primary btn-large">
          Book Your Free Setup Call
        </a>
        <a href="#comparison" class="btn btn-ghost btn-large">
          See How Much You'll Save
        </a>
      </div>
    </div>

    <div class="hero-visual" data-animate="fade-scale" data-delay="300">
      <div class="team-cluster">
        {teamMembers.map((member, index) => (
          <div
            class={`team-avatar avatar-${index + 1}`}
            style={`background: ${member.gradient}; animation-delay: ${index * 0.5}s;`}
          >
            <span class="avatar-initial">{member.name[0]}</span>
            <div class="avatar-glow"></div>
          </div>
        ))}
        <div class="cluster-connector"></div>
      </div>
    </div>
  </div>

  <div class="scroll-indicator">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: calc(var(--header-height) + var(--space-3xl)) 0 var(--space-3xl);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, #E8B4A3 0%, #D4854A 100%);
    top: -200px;
    right: -100px;
    animation: float 20s ease-in-out infinite;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #C9A227 0%, #F5E6A3 100%);
    bottom: -100px;
    left: -100px;
    animation: float 15s ease-in-out infinite reverse;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-badge {
    margin-bottom: var(--space-lg);
  }

  .hero-title {
    font-size: clamp(40px, 5vw, 56px);
    line-height: 1.1;
    margin-bottom: var(--space-lg);
    color: var(--color-text-primary);
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  .hero-trust {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .trust-icon {
    color: var(--color-success);
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .team-cluster {
    position: relative;
    width: 400px;
    height: 400px;
  }

  .team-avatar {
    position: absolute;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid white;
    box-shadow: var(--shadow-lg);
    animation: float-avatar 6s ease-in-out infinite;
  }

  .avatar-initial {
    font-size: 32px;
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }

  .avatar-glow {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    background: inherit;
    filter: blur(20px);
    opacity: 0.3;
    z-index: -1;
  }

  .avatar-1 {
    width: 100px;
    height: 100px;
    top: 20%;
    left: 10%;
  }

  .avatar-2 {
    width: 120px;
    height: 120px;
    top: 5%;
    left: 35%;
    animation-delay: 0.5s;
  }

  .avatar-3 {
    width: 90px;
    height: 90px;
    top: 15%;
    right: 15%;
    animation-delay: 1s;
  }

  .avatar-4 {
    width: 110px;
    height: 110px;
    bottom: 25%;
    left: 5%;
    animation-delay: 1.5s;
  }

  .avatar-5 {
    width: 100px;
    height: 100px;
    bottom: 15%;
    left: 40%;
    animation-delay: 2s;
  }

  .avatar-6 {
    width: 95px;
    height: 95px;
    bottom: 20%;
    right: 10%;
    animation-delay: 2.5s;
  }

  .scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-text-muted);
    animation: bounce 2s infinite;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(30px, -30px); }
    50% { transform: translate(-20px, 20px); }
    75% { transform: translate(20px, 10px); }
  }

  @keyframes float-avatar {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }

  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      max-width: 100%;
    }

    .hero-trust {
      justify-content: center;
    }

    .hero-cta {
      justify-content: center;
    }

    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 36px;
    }

    .hero-subtitle {
      font-size: var(--font-size-lg);
    }

    .hero-cta {
      flex-direction: column;
    }

    .hero-cta .btn {
      width: 100%;
    }
  }
</style>
