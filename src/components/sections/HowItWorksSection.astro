<style>
  /* ========== HOW IT WORKS SECTION ========== */
  .how-it-works-section {
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-primary) 100%);
    position: relative;
    overflow: hidden;
  }

  /* Background Elements */
  .section-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .gradient-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.3;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.5) 0%, transparent 70%);
    top: -100px;
    left: -100px;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.4) 0%, transparent 70%);
    bottom: -100px;
    right: -100px;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-4xl);
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: var(--radius-pill);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
    color: #34d399;
    border: 1px solid rgba(16, 185, 129, 0.2);
    margin-bottom: var(--space-lg);
  }

  .section-title {
    font-size: clamp(36px, 5vw, 48px);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Steps Container */
  .steps-container {
    position: relative;
    margin-bottom: var(--space-4xl);
  }

  /* Connection Line */
  .connection-line {
    position: absolute;
    top: 100px;
    left: 16.66%;
    right: 16.66%;
    height: 2px;
    background: rgba(255, 255, 255, 0.06);
    z-index: 0;
  }

  .line-progress {
    height: 100%;
    width: 0;
    background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
    animation: line-progress 3s ease-out forwards;
  }

  @keyframes line-progress {
    to {
      width: 100%;
    }
  }

  /* Steps Grid */
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
    position: relative;
    z-index: 1;
  }

  .step-card {
    text-align: center;
    position: relative;
  }

  .step-number-wrapper {
    position: relative;
    display: inline-flex;
    margin-bottom: var(--space-xl);
  }

  .step-number {
    font-size: 14px;
    font-weight: 700;
    color: var(--color-text-muted);
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    position: relative;
    z-index: 1;
    background: var(--color-bg-secondary);
    transition: all var(--transition-normal);
  }

  .step-card:hover .step-number {
    border-color: #6366f1;
    color: #6366f1;
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
  }

  .step-pulse {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid #6366f1;
    opacity: 0;
    animation: step-pulse 2s ease-out infinite;
  }

  @keyframes step-pulse {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    100% {
      transform: scale(1.3);
      opacity: 0;
    }
  }

  /* Step Visual */
  .step-visual {
    position: relative;
    margin-bottom: var(--space-xl);
    display: flex;
    justify-content: center;
  }

  .step-mockup-wrapper {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    position: relative;
    z-index: 1;
    transition: all var(--transition-slow);
  }

  .step-card:hover .step-mockup-wrapper {
    transform: translateY(-8px);
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .step-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    pointer-events: none;
  }

  .step-glow-alt {
    background: radial-gradient(circle, rgba(16, 185, 129, 0.2) 0%, transparent 70%);
  }

  .step-glow-alt2 {
    background: radial-gradient(circle, rgba(236, 72, 153, 0.2) 0%, transparent 70%);
  }

  .step-card:hover .step-glow {
    opacity: 1;
  }

  /* Step Content */
  .step-content h3 {
    font-size: var(--font-size-xl);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    color: var(--color-text-primary);
  }

  .step-content p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.7;
    max-width: 280px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Step Arrow */
  .step-arrow {
    position: absolute;
    top: 120px;
    right: -30px;
    color: var(--color-text-muted);
    opacity: 0.3;
    animation: arrow-pulse 2s ease-in-out infinite;
  }

  @keyframes arrow-pulse {
    0%, 100% {
      transform: translateX(0);
      opacity: 0.3;
    }
    50% {
      transform: translateX(5px);
      opacity: 0.6;
    }
  }

  .step-card:last-child .step-arrow {
    display: none;
  }

  /* Integrations Section */
  .integrations-section {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .integrations-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-lg);
  }

  .integrations-marquee {
    overflow: hidden;
    mask-image: linear-gradient(90deg, transparent, black 10%, black 90%, transparent);
  }

  .marquee-track {
    display: flex;
    gap: var(--space-xl);
    animation: marquee 30s linear infinite;
  }

  .integration-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    font-weight: 500;
    color: var(--color-text-secondary);
    white-space: nowrap;
    transition: all var(--transition-normal);
  }

  .integration-item:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .integration-item svg {
    opacity: 0.7;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 968px) {
    .connection-line {
      display: none;
    }

    .steps-grid {
      grid-template-columns: 1fr;
      gap: var(--space-3xl);
    }

    .step-arrow {
      display: none;
    }

    .step-card {
      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media (max-width: 480px) {
    .step-mockup-wrapper {
      padding: var(--space-lg);
    }

    .integration-item {
      padding: var(--space-sm) var(--space-md);
      font-size: var(--font-size-sm);
    }
  }
</style>

<script>
  // Scroll animation observer
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const delay = entry.target.dataset.delay || 0;
        setTimeout(() => {
          entry.target.classList.add('animate-visible');
        }, parseInt(delay));
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('#how-it-works [data-animate]').forEach(el => {
    observer.observe(el);
  });
</script>
