---
import KeyboardMockup from '../ui/KeyboardMockup.astro';
import WaveformMockup from '../ui/WaveformMockup.astro';
import EditorMockup from '../ui/EditorMockup.astro';
---

<!-- How It Works Section - Mobbin-inspired Design -->
<section class="how-it-works-section" id="how-it-works">
  <!-- Background Elements -->
  <div class="section-bg">
    <div class="gradient-blob blob-1"></div>
    <div class="gradient-blob blob-2"></div>
  </div>

  <div class="container">
    <!-- Section Header -->
    <div class="section-header" data-animate="fade-up">
      <span class="section-badge">How It Works</span>
      <h2 class="section-title">From Typing to Talking<br/>in Seconds</h2>
      <p class="section-subtitle">
        Simple Setup. No Cloud or Internet accounts. Just Instant Productivity.
      </p>
    </div>

    <!-- Steps -->
    <div class="steps-container">
      <!-- Connection Line -->
      <div class="connection-line" data-animate="scale-in">
        <div class="line-progress"></div>
      </div>

      <div class="steps-grid" data-stagger>
        <!-- Step 1: Press Hotkey -->
        <div class="step-card" data-animate="fade-up">
          <div class="step-number-wrapper">
            <span class="step-number">01</span>
            <div class="step-pulse"></div>
          </div>
          <div class="step-visual">
            <div class="step-mockup-wrapper">
              <KeyboardMockup />
            </div>
            <div class="step-glow"></div>
          </div>
          <div class="step-content">
            <h3>Trigger Anywhere</h3>
            <p>Tap your custom hotkey in any app: Cursor, Slack, or Outlook. Mellon is ready to listen instantly.</p>
          </div>
          <div class="step-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        </div>

        <!-- Step 2: Speak Naturally -->
        <div class="step-card" data-animate="fade-up">
          <div class="step-number-wrapper">
            <span class="step-number">02</span>
            <div class="step-pulse"></div>
          </div>
          <div class="step-visual">
            <div class="step-mockup-wrapper">
              <WaveformMockup />
            </div>
            <div class="step-glow step-glow-alt"></div>
          </div>
          <div class="step-content">
            <h3>Speak Naturally</h3>
            <p>Just chat. Processed 100% on-device. Your data never leaves your Mac.</p>
          </div>
          <div class="step-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        </div>

        <!-- Step 3: Perfect Text Appears -->
        <div class="step-card" data-animate="fade-up">
          <div class="step-number-wrapper">
            <span class="step-number">03</span>
            <div class="step-pulse"></div>
          </div>
          <div class="step-visual">
            <div class="step-mockup-wrapper">
              <EditorMockup />
            </div>
            <div class="step-glow step-glow-alt2"></div>
          </div>
          <div class="step-content">
            <h3>Near Instant Execution</h3>
            <p>Text appears exactly where you need it, perfectly formatted.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- App Integrations -->
    <div class="integrations-section" data-animate="fade-up">
      <p class="integrations-label">Works seamlessly with</p>
      <div class="integrations-marquee">
        <div class="marquee-track">
          <div class="integration-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
