---
// Footer Component - Mobbin-inspired Modern Design
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <!-- Background Effects -->
  <div class="footer-bg">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
  </div>

  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-content">
      <!-- Brand Column -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <div class="logo-icon-wrapper">
            <img src="/mellon-mac-toolbar-icon.png" alt="Mellon" class="logo-icon" width="32" height="32" />
            <div class="logo-glow"></div>
          </div>
          <span class="logo-text">Mellon</span>
        </a>
        <p class="footer-tagline">One-time purchase. Forever access.</p>
        <p class="footer-description">Privacy-first voice dictation for macOS. Your words, your Mac, your control.</p>
        
        <!-- Social Links -->
        <div class="social-links">
          <a href="https://twitter.com/mellonvoice" target="_blank" rel="noopener" class="social-link" aria-label="Twitter">
