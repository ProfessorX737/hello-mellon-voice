---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { blogPosts } from '../../data/blog';
---

<BaseLayout 
  title="Blog | Mellon - Voice Dictation, Productivity & AI"
  description="Articles on voice dictation, privacy-first software, ADHD productivity, and AI tools from the Mellon team."
>
  <section class="blog-section">
    <div class="container">
      <h1 class="blog-title">Blog</h1>
      <p class="blog-intro">
        Tips on voice dictation, productivity, and building tools that respect your privacy.
      </p>

      <div class="blog-list">
        {blogPosts
          .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
          .map((post) => (
            <article class="blog-card">
              <a href={`/blog/${post.slug}`} class="blog-card-link">
                <time class="blog-date" datetime={post.date}>
                  {new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <h2 class="blog-card-title">{post.title}</h2>
                <p class="blog-card-excerpt">{post.excerpt}</p>
                <span class="blog-read-more">Read more â†’</span>
              </a>
            </article>
          ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-section {
    padding: var(--space-5xl) 0;
    min-height: 60vh;
  }

  .blog-title {
    font-size: clamp(36px, 5vw, 48px);
    font-weight: 800;
    letter-spacing: -0.03em;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    text-align: center;
  }

  .blog-intro {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    text-align: center;
    margin-bottom: var(--space-4xl);
  }

  .blog-list {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .blog-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: border-color var(--transition-normal);
  }

  .blog-card:hover {
    border-color: rgba(255, 255, 255, 0.15);
  }

  .blog-card-link {
    display: block;
    padding: var(--space-2xl);
    text-decoration: none;
    color: inherit;
  }

  .blog-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .blog-card-title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .blog-card-title:hover {
    color: var(--color-accent-primary);
  }

  .blog-card-excerpt {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .blog-read-more {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-accent-primary);
  }

  @media (max-width: 768px) {
    .blog-card-link {
      padding: var(--space-xl);
    }
  }
</style>
