---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Thanks for subscribing | Mellon" description="You're subscribed to Mellon updates.">
  <section class="thankyou-section">
    <div class="container">
      <h1>Thanks for subscribing!</h1>
      <p>We'll send you updates about Mellon. Check your inbox to confirm.</p>
      <a href="/" class="btn btn-primary">Back to Mellon</a>
    </div>
  </section>
</BaseLayout>

<style>
  .thankyou-section {
    padding: var(--space-5xl) 0;
    text-align: center;
  }
  .thankyou-section h1 {
    font-size: clamp(28px, 4vw, 40px);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  .thankyou-section p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }
</style>
